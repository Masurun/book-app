<%=form_with model:@book,local: true do |f|%>
<table class="form-table">
    <tbody>
      <tr>
        <th>タイトル</th>
        <td><%=f.text_field :title%>
        </td>
      </tr>
      <tr>
        <th>作者</th>
        <td><%=f.text_field :author%>
        </td>
      </tr>
      <tr>
        <th>カテゴリー</th>
        <td><%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        </td>
      </tr>
      <tr>
        <th>出版社</th>
          <td><%=f.text_field :publication%><td>
        </td>
      </tr>
      <tr>
        <th>出版年</th>
        <td><%=raw sprintf(
          f.date_select(
          :publication_date,
          start_year: 1930,
          end_year: (Time.now.year - 18),
          default: Date.new(1989, 1, 1),
          use_month_numbers:true,
          date_separator:'%s'),'年','月')+'日' %>
        </td>
      </tr>
    </tbody>
  </table>
 <%end%>
